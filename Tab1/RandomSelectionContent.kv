
<RandomSelectionContent>:
    TabbedPanelItem:
        text: 'Number Generator'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Random Number Generator'
                font_size: 30
                bold: True
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Minimum Value:'
                TextInput:
                    id: min_value
                    multiline: False
                    input_filter: 'int'
                Label:
                    text: 'Maximum Value:'
                TextInput:
                    id: max_value
                    multiline: False
                    input_filter: 'int'
            Button:
                text: 'Generate Random Number'
                on_press: root.generate_random_number()
            Label:
                id: random_number
                text: ''
    TabbedPanelItem:
        text: 'Letters Generator'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Random Letters Generator'
                font_size: 30
                bold: True
            Label:
                text: 'Select the number of letters'
            Label:
                id: display_number
                text: '1'
            Slider:
                min: 1
                max: 100
                step: 1
                orientation: 'horizontal'
                on_value: root.show_number(*args)
            Button:
                text: 'Generate Letters'
                on_press: root.generate_letters()
            Label:
                id: random_letters
                text: ''
    TabbedPanelItem:
        text: 'Date Generator'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Random Date Generator'
                font_size: 30
                bold: True
            Button:
                text: 'Generate date'
                on_press: root.generate_date()
            Label:
                id: random_date
                text: ''
    TabbedPanelItem:
        text: 'Password Generator'