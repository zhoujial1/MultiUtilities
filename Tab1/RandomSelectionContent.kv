
<RandomSelectionContent>:
    TabbedPanelItem:
        text: 'Number Generator'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Random Number Generator'
                font_size: 30
                bold: True
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Minimum Value:'
                TextInput:
                    id: min_value
                    multiline: False
                    input_filter: 'int'
                Label:
                    text: 'Maximum Value:'
                TextInput:
                    id: max_value
                    multiline: False
                    input_filter: 'int'
            Button:
                text: 'Generate Random Number'
                on_press: root.generate_random_number()
            Label:
                id: random_number
                text: ''
    TabbedPanelItem:
        text: 'Letters Generator'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Random Letters Generator'
                font_size: 30
                bold: True
            Label:
                text: 'Select the number of letters'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: display_number
                    text: '1'
                Slider:
                    min: 1
                    max: 50
                    step: 1
                    orientation: 'horizontal'
                    on_value: root.show_number(*args)
            Button:
                text: 'Generate Letters'
                on_press: root.generate_letters()
            Label:
                id: random_letters
                text: ''
    TabbedPanelItem:
        text: 'Date Generator'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Random Date Generator'
                font_size: 30
                bold: True
            Button:
                text: 'Generate date'
                on_press: root.generate_date()
            Label:
                id: random_date
                text: ''
    TabbedPanelItem:
        text: 'Password Generator'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Random Password Generator'
                font_size: 30
                bold: True
            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: display_number_password
                    text: '1'
                Slider:
                    min: 1
                    max: 50
                    step: 1
                    orientation: 'horizontal'
                    on_value: root.show_number_password(*args)
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Include Letters'
                    CheckBox:
                        id: include_letters
                        active: True
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Include Numbers'
                    CheckBox:
                        id: include_numbers
                        active: True
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Include Special Characters'
                    CheckBox:
                        id: include_special_chars
                        active: False
            Button:
                text: 'Generate Password'
                on_press: root.generate_password()
            Label:
                id: generated_password
                text: ''