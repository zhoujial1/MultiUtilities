
<RandomSelectionContent>:
    # TabbedPanelItem for Number Generator
    TabbedPanelItem:
        text: 'Number Generator'
        BoxLayout:
            orientation: 'vertical'
            padding: [30,10,30,10]
            Label:
                text: 'Random Number Generator'
                font_size: 30
                bold: True
            BoxLayout:
                orientation: 'horizontal'
                padding: [0,40,0,40]
                Label:
                    text: 'Minimum Value:'
                    font_size: 15
                TextInput:
                    id: min_value
                    multiline: False
                    input_filter: 'int'
                Label:
                    text: 'Maximum Value:'
                    font_size: 15
                TextInput:
                    id: max_value
                    multiline: False
                    input_filter: 'int'
            BoxLayout:
                orientation: 'horizontal'
                padding: [0,40,0,50]
                TextInput:
                    id: random_number
                    text: ''
                    bold: True
                    font_size: 20
                    readonly: True
                    halign: 'center'
                    valign: 'center'
                    multiline: False
            BoxLayout:
                padding: [0, 10, 0, 10]
                size_hint_y: None
                height: '100dp'
                Button:
                    text: 'Generate Random Number'
                    on_press: root.generate_random_number()
    
    # TabbedPanelItem for Letters Generator
    TabbedPanelItem:
        text: 'Letters Generator'
        BoxLayout:
            orientation: 'vertical'
            padding: [30,10,30,10]
            Label:
                text: 'Random Letters Generator'
                font_size: 30
                bold: True
            Label:
                text: 'Select the number of letters'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: display_number
                    text: '1'
                Slider:
                    min: 1
                    max: 50
                    step: 1
                    orientation: 'horizontal'
                    on_value: root.show_number(*args)
            BoxLayout:
                orientation: 'horizontal'
                padding: [0,25,0,30]
                TextInput:
                    id: random_letters
                    text: ''
                    bold: True
                    font_size: 20
                    readonly: True
                    halign: 'center'
                    valign: 'center'
                    multiline: False
            BoxLayout:
                padding: [0, 10, 0, 10]
                size_hint_y: None
                height: '100dp'
                Button:
                    text: 'Generate Letters'
                    on_press: root.generate_letters()

    # TabbedPanelItem for Date Generator
    TabbedPanelItem:
        text: 'Date Generator'
        BoxLayout:
            orientation: 'vertical'
            padding: [30,10,30,10]
            Label:
                text: 'Random Date Generator'
                font_size: 30
                bold: True
            BoxLayout:
                orientation: 'horizontal'
                padding: [0,70,0,70]
                TextInput:
                    id: random_date
                    text: ''
                    bold: True
                    font_size: 20
                    readonly: True
                    halign: 'center'
                    valign: 'center'
                    multiline: False
            BoxLayout:
                padding: [0, 10, 0, 10]
                size_hint_y: None
                height: '100dp'
                Button:
                    text: 'Generate date'
                    on_press: root.generate_date()

    # TabbedPanelItem for Password Generator
    TabbedPanelItem:
        text: 'Password Generator'
        BoxLayout:
            orientation: 'vertical'
            padding: [30,10,30,10]
            Label:
                text: 'Random Password Generator'
                font_size: 30
                bold: True
            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: display_number_password
                    text: '1'
                Slider:
                    min: 1
                    max: 50
                    step: 1
                    orientation: 'horizontal'
                    on_value: root.show_number_password(*args)
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Include Letters'
                    CheckBox:
                        id: include_letters
                        active: True
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Include Numbers'
                    CheckBox:
                        id: include_numbers
                        active: True
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Include Special Characters'
                    CheckBox:
                        id: include_special_chars
                        active: False
            BoxLayout:
                orientation: 'horizontal'
                padding: [0,25,0,30]
                TextInput:
                    id: generated_password
                    text: ''
                    bold: True
                    font_size: 20
                    readonly: True
                    halign: 'center'
                    valign: 'center'
                    multiline: False
            BoxLayout:
                padding: [0, 10, 0, 10]
                size_hint_y: None
                height: '100dp'
                Button:
                    text: 'Generate Password'
                    on_press: root.generate_password()