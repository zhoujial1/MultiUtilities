
<RandomSelectionContent>:
    TabbedPanelItem:
        text: 'Number Generator'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Random Number Generator'
                font_size: 30
                bold: True
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Minimum Value:'
                TextInput:
                    id: min_value
                    multiline: False
                    input_filter: 'int'
                Label:
                    text: 'Maximum Value:'
                TextInput:
                    id: max_value
                    multiline: False
                    input_filter: 'int'
            Button:
                text: 'Generate Random Number'
                on_press: root.generate_random_number()
            Label:
                id: random_number
                text: ''
    TabbedPanelItem:
        text: 'Letters Generator'
    TabbedPanelItem:
        text: 'Date Generator'
    TabbedPanelItem:
        text: 'Password Generator'